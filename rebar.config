%%-*- mode: erlang -*-

{erl_opts, [
            debug_info,
            warn_format,
            warn_export_all,
            warn_export_vars,
            warn_obsolete_guard,
            warn_bif_clash,
            %% warn_missing_spec,
            %% warn_untyped_record
            {parse_transform, lager_transform}
           ]}.

{deps, [
  {cowboy, ".*", {git, "git://github.com/extend/cowboy.git"}},
  {meck, ".*", {git, "https://github.com/eproxus/meck.git"}},
  {eredis, ".*", {git, "git://github.com/wooga/eredis.git"}},
  {lager, ".*", {git, "git://github.com/basho/lager.git"}},
  {jiffy, ".*", {git, "git://github.com/davisp/jiffy.git"}}
]}.

{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{cover_enabled, true}.
